<!DOCTYPE html>
<html lang="en">




<%- include('./partials/head.ejs') %>





<body>
    <%- include('./partials/nav.ejs') %>


    <div class="heading-secondry" style="padding: 2rem;">


        <h4>Meals List</h4>
    
    </div>


        <section class="meal-list">

            <% meals.forEach(meal=> { %>
                <div class="meal-card">

                    <div class="meal-card__side meal-card__side--front">
                    <div class="meal-card__details">
                        <div class="meal-card__name">
                            <%= meal.name %>
                        </div>
                        <div class="meal-card__price">
                            <%= meal.price %>
                                <%= dollarSign %>
                        </div>
                    
                    <div class="meal-card__contents">Lorem ipsum dolor, sit amet consectetur adipisicing elit. Quod odio
                        debitis aliquid reiciendis, odit ratione velit.</div>
                    <div class="meal-card__action">
                    </div>
                    
                </div>
                    </div>

                <div class="meal-card__side meal-card__side--back">


                        <div class="meal-card__action button-update">
                            <!-- <a href="/meals/<%= meal.id %>"> -->
                                <button onclick="updateMeal('<%= meal.id %>')" class="button-update">update</button>
                            <!-- </a> -->
                        </div>
                        <div class="meal-card__action button-delete">
                            <!-- <a href="#"> -->
                                <button onclick="deleteMeal('<%= meal.id %>')" class="button-delete">delete</button>
                            <!-- </a> -->
                        </div>
                    </div>
                </div>
                <% }); %>


        </section>
        <script src="/js/meals-list.js"></script>
</body>

</html>






